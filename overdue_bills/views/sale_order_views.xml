<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- sale order !-->
    <record id="fae_sale_order_form_inherit" model="ir.ui.view" >
        <field name="name">Sale Order</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/header" position="after">
                <div class="alert bg-danger font-weight-bolder h5 text-center" role="alert" style="margin-bottom:0px;"
                     attrs="{'invisible':['|', ('partner_id', '=', False), ('x_overdue_bill_count_message', '=', False)]}">
                    <field name="x_overdue_bill_count_message" readonly="1" nolabel="1"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>