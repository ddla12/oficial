<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- TREE VIEW -->
    <record id="xaccount_payment_reconciled_tree_view" model="ir.ui.view">
        <field name="name">xaccount_payment_reconciled_tree_view</field>
        <field name="model">xaccount.payment.reconciled</field>
        <field name="arch" type="xml">
            <tree default_order="id desc" create="false" edit="false">
                <field name="invoice_user_id"/>
                <field name="payment_id"/>
                <field name="invoice_id"/>
                <field name="payment_date"/>
                <field name="invoice_date"/>
                <field name="invoice_date_due"/>
                <field name="paid_in"/>
                <field name="invoice_payment_term_id"/>
                <field name="company_id"/>
                <field name="payment_amount" sum="Payment total"/>
                <field name="invoice_amount_total" sum="Invoice Total"/>
                <field name="invoice_amount_residual" sum="Invoice Amount Residual"/>
                <field name="pay_range" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- SEARCH VIEW -->
    <record id="xaccount_payment_reconciled_search_view" model="ir.ui.view">
        <field name="name">xaccount_payment_reconciled_search_view</field>
        <field name="model">xaccount.payment.reconciled</field>
        <field name="arch" type="xml">
            <search string="Payments by Invoice">
                <field name="invoice_user_id" filter_domain="[('invoice_user_id', 'like', self)]"/>
                <field name="payment_id" filter_domain="[('payment_id', 'like', self)]"/>
                <field name="invoice_id" filter_domain="[('invoice_id', 'like', self)]"/>
                <field name="payment_date" filter_domain="[('payment_date', 'like', self)]"/>
                <field name="invoice_date" filter_domain="[('invoice_date', 'like', self)]"/>
                <field name="company_id" filter_domain="[('company_id', 'like', self)]"/>
                <filter name="paid_in" string="Paid in 0 - 15 Days" domain="[('paid_in', '&lt;=', 15)]"/>
                <filter name="paid_in" string="Paid in 16 - 30 Days" domain="['&amp;', ('paid_in', '&gt;=', 16), ('paid_in', '&lt;=', 30)]"/>
                <filter name="paid_in" string="Paid in 31 - 45 Days" domain="['&amp;', ('paid_in', '&gt;=', 31), ('paid_in', '&lt;=', 45)]"/>
                <filter name="paid_in" string="Paid in +45 Days" domain="[('paid_in', '&gt;', 45)]"/>
                <filter name="invoice_date" string="Invoice Date" date="invoice_date"/>
                <filter name="invoice_date_due" string="Invoice Due Date" date="invoice_date_due"/>
                <filter name="payment_date" string="Payment Date" date="payment_date"/>
                <group expand="0" name="group_by" string="Group By">
                    <filter name="invoice_user_id" string="Salesperson" context="{'group_by': 'invoice_user_id'}"/>
                    <filter name="payment_id" string="Payment" context="{'group_by': 'payment_id'}"/>
                    <filter name="invoice_id" string="Invoice" context="{'group_by': 'invoice_id'}"/>
                    <filter name="payment_date" string="Payment Date" context="{'group_by': 'payment_date'}"/>
                    <filter name="invoice_date" string="Invoice Date" context="{'group_by': 'invoice_date'}"/>
                    <filter name="invoice_date_due" string="Invoice Due Date" context="{'group_by': 'invoice_date_due'}"/>
                    <filter name="pay_range" string="Pay Range" context="{'group_by': 'pay_range'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- PIVOT VIEW -->
    <record id="xaccount_payment_reconciled_pivot_view" model="ir.ui.view">
        <field name="name">xaccount_payment_reconciled_pivot_view</field>
        <field name="model">xaccount.payment.reconciled</field>
        <field name="arch" type="xml">
            <pivot string="Payments by Invoice">
                <field name="invoice_user_id"/>
                <field name="payment_id"/>
                <field name="invoice_id"/>
                <field name="payment_date"/>
                <field name="invoice_date"/>
                <field name="invoice_date_due"/>
                <field name="paid_in"/>
                <field name="invoice_payment_term_id"/>
                <field name="company_id"/>
                <field name="payment_amount" sum="Payment total"/>
                <field name="invoice_amount_total" sum="Invoice Total"/>
                <field name="invoice_amount_residual" sum="Invoice Amount Residual"/>
                <field name="pay_range"/>
            </pivot>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="xaccount_payment_reconciled_form_view" model="ir.ui.view">
        <field name="name">xaccount_payment_reconciled_form_view</field>
        <field name="model">xaccount.payment.reconciled</field>
        <field name="arch" type="xml">
            <form string="Payments by Invoice" create="false" edit="false">
                <sheet>
                    <group>
                        <field name="currency_id" invisible="1"/>
                        <field name="invoice_move_type" invisible="1"/>
                        <field name="pay_range" invisible="1"/>
                        <group>
                            <field name="invoice_user_id"/>
                            <field name="payment_id"/>
                            <field name="invoice_id"/>
                            <field name="invoice_payment_term_id"/>
                            <field name="invoice_amount_total"/>
                            <field name="payment_amount"/>
                        </group>
                        <group>
                            <field name="company_id"/>
                            <field name="payment_date"/>
                            <field name="invoice_date"/>
                            <field name="invoice_date_due"/>
                            <field name="paid_in"/>
                            <field name="invoice_amount_residual"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION WINDOW -->
    <record id="xaccount_payment_reconciled_customer_action_window" model="ir.actions.act_window">
        <field name="name">Payments by Invoice</field>
        <field name="res_model">xaccount.payment.reconciled</field>
        <field name="view_mode">tree,pivot,form</field>
        <field name="domain">[('invoice_move_type', '=', 'out_invoice')]</field>
        <field name="search_view_id" ref="xaccount_payment_reconciled_search_view"/>
    </record>

    <record id="xaccount_payment_reconciled_vendor_action_window" model="ir.actions.act_window">
        <field name="name">Payments by Invoice</field>
        <field name="res_model">xaccount.payment.reconciled</field>
        <field name="view_mode">tree,pivot,form</field>
        <field name="domain">[('invoice_move_type', '=', 'in_invoice')]</field>
        <field name="search_view_id" ref="xaccount_payment_reconciled_search_view"/>
    </record>

    <!-- REF ACTION WINDOW -->
    <record id="xaccount_payment_reconciled_customer_tree_action_window" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="payments_by_invoice.xaccount_payment_reconciled_tree_view"/>
        <field name="act_window_id" ref="payments_by_invoice.xaccount_payment_reconciled_customer_action_window"/>
    </record>

    <record id="xaccount_payment_reconciled_customer_form_action_window" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="payments_by_invoice.xaccount_payment_reconciled_form_view"/>
        <field name="act_window_id" ref="payments_by_invoice.xaccount_payment_reconciled_customer_action_window"/>
    </record>

    <record id="xaccount_payment_reconciled_vendor_tree_action_window" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="payments_by_invoice.xaccount_payment_reconciled_tree_view"/>
        <field name="act_window_id" ref="payments_by_invoice.xaccount_payment_reconciled_vendor_action_window"/>
    </record>

    <record id="xaccount_payment_reconciled_vendor_form_action_window" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="payments_by_invoice.xaccount_payment_reconciled_form_view"/>
        <field name="act_window_id" ref="payments_by_invoice.xaccount_payment_reconciled_vendor_action_window"/>
    </record>

    <!-- MENU ITEM -->
    <menuitem id="xaccount_payment_reconciled_customer_menu" name="Payments by Invoice" action="xaccount_payment_reconciled_customer_action_window"
              parent="account.menu_finance_receivables" sequence="99"/>
    <menuitem id="xaccount_payment_reconciled_vendor_menu" name="Payments by Invoice" action="xaccount_payment_reconciled_vendor_action_window"
              parent="account.menu_finance_payables" sequence="99"/>
</odoo>