<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="wp_tree_account_invoice_inherit" model="ir.ui.view">
            <field name="name">wp.tree.account.invoice.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_date_due']" position="attributes">
                    <attribute name="string">Días vencimiento</attribute>
                    <attribute name="optional">hide</attribute>
                </xpath>
            </field>
        </record>

        <record id="wp_tree_account_move_inherit" model="ir.ui.view">
            <field name="name">wp.tree.account.move.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_date']" position="after">
                    <field name="invoice_date_due" optional="show" string="Fecha Vencimiento"/>
                    <field name="x_due_days_count" optional="hide" string="Días atraso pago"/>
                </xpath>
            </field>
        </record>

        <record id="wp_form_account_move_inherit" model="ir.ui.view">
            <field name="name">wp.form.account.move.inherit</field>
            <field name="model">account.move</field>
            <field name="priority">20</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <data>
                    <field name="invoice_date" position="attributes">
                        <attribute name="attrs">{'invisible': [('state','=','draft')]}</attribute>
                    </field>
                    <button name='open_reconcile_view' position="after">
                        <button type="object"
                                name="action_view_sale_delivery"
                                class="oe_stat_button"
                                icon="fa-truck"
                                attrs="{'invisible': [('x_delivery_count', '=', 0)]}" groups="base.group_user">
                            <field name="x_delivery_count" widget="statinfo" string="Entregas"/>
                        </button>
                    </button>
                    <field name="invoice_date" position="after">
                        <field name="x_last_picking_date_done"
                               attrs="{'invisible': ['|',('x_delivery_count', '=', 0), ('move_type', 'not in', ('out_invoice'))]}"/>
                    </field>
                </data>
            </field>
        </record>
    </data>
</odoo>