<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="xreport_accont_move_invoice_inherit" inherit_id="account.report_invoice_document">
        <xpath expr="/div/div[2]/div[1]/table/tbody/tr[1]/td[2]" position="replace">
            <t t-if="o.partner_id.name != 'CLIENTE CONTADO'">
                <t t-if="o.partner_id.parent_id and o.partner_id.parent_id.name != o.partner_id.name ">
                    <span style="font-size:18px; font-weight:bold;" t-field="o.partner_id.parent_id.name"/>
                    <br/>
                </t>
                <span style="font-size:18px; font-weight:bold" t-field="o.partner_id.name"/>
            </t>
            <t t-if="o.partner_id.name == 'CLIENTE CONTADO'">
                <t t-if="o.x_name_to_print">
                    <span style="font-size:18px; font-weight:bold" t-field="o.x_name_to_print"/>
                </t>
            </t>
        </xpath>
    </template>
</odoo>